<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/item_list_user_avatar"
        android:layout_width="@dimen/item_list_user_avatar_width_and_height"
        android:layout_height="@dimen/item_list_user_avatar_width_and_height"
        android:layout_marginStart="@dimen/item_list_user_avatar_margin"
        android:layout_marginTop="@dimen/item_list_user_avatar_margin"
        android:layout_marginBottom="@dimen/item_list_user_avatar_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/item_list_workmates_username_and_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_list_workmates_username_and_restaurant_margin"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_list_user_avatar"
        app:layout_constraintStart_toEndOf="@+id/item_list_user_avatar"
        app:layout_constraintTop_toTopOf="@+id/item_list_user_avatar"
        tools:text="Name + eat TYPE RESTAURANT + (restaurant)"/>



</androidx.constraintlayout.widget.ConstraintLayout>